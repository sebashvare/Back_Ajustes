# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - REGISTRO DE AJUSTES
# =============================================================================
# IMPORTANTE: Este archivo contiene configuraciones sensibles para producción.
# No incluir en el control de versiones. Copiar a .env en el servidor.

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here-change-this
ENVIRONMENT=production

# =============================================================================
# BASE DE DATOS
# =============================================================================
# Para producción, recomendamos PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/registro_ajustes_prod
# Alternativa con variables separadas:
DB_ENGINE=django.db.backends.postgresql
DB_NAME=registro_ajustes_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# SEGURIDAD
# =============================================================================
# Dominios permitidos en producción
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip
# Orígenes CORS permitidos para el frontend
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# JWT CONFIGURACIÓN
# =============================================================================
# Tiempo de vida del token de acceso (en minutos)
ACCESS_TOKEN_LIFETIME=15
# Tiempo de vida del token de refresco (en días)
REFRESH_TOKEN_LIFETIME=7
# Algoritmo de firma JWT
JWT_ALGORITHM=HS256

# =============================================================================
# EMAIL CONFIGURACIÓN
# =============================================================================
# Para notificaciones del sistema
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Sistema de Ajustes <noreply@yourdomain.com>

# =============================================================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# =============================================================================
# URL para archivos estáticos en producción
STATIC_URL=/static/
STATIC_ROOT=/var/www/registro_ajustes/static/
# URL para archivos media
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/registro_ajustes/media/

# =============================================================================
# CACHE (REDIS)
# =============================================================================
# Para mejorar rendimiento en producción
REDIS_URL=redis://localhost:6379/1
CACHE_TIMEOUT=300

# =============================================================================
# LOGGING
# =============================================================================
# Nivel de logging para producción
LOG_LEVEL=INFO
LOG_FILE=/var/log/registro_ajustes/django.log

# =============================================================================
# MONITOREO Y PERFORMANCE
# =============================================================================
# Sentry para tracking de errores (opcional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# New Relic para monitoreo (opcional)
NEW_RELIC_LICENSE_KEY=your-license-key

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================
# Puerto del servidor
PORT=8000
# Workers para Gunicorn
WORKERS=3
# Timeout para requests
TIMEOUT=30