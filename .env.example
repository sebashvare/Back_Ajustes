# =============================================================================
# CONFIGURACIÓN DE DESARROLLO - REGISTRO DE AJUSTES
# =============================================================================
# Archivo de ejemplo para variables de entorno de desarrollo
# Copiar a .env y ajustar valores según necesidades locales

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
ENVIRONMENT=development

# =============================================================================
# BASE DE DATOS - DESARROLLO
# =============================================================================
# SQLite para desarrollo local
DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# SEGURIDAD - DESARROLLO
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# =============================================================================
# JWT CONFIGURACIÓN - DESARROLLO
# =============================================================================
ACCESS_TOKEN_LIFETIME=60
REFRESH_TOKEN_LIFETIME=1
JWT_ALGORITHM=HS256

# =============================================================================
# EMAIL - DESARROLLO (Console backend)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=desarrollo@localhost

# =============================================================================
# ARCHIVOS ESTÁTICOS - DESARROLLO
# =============================================================================
STATIC_URL=/static/
MEDIA_URL=/media/

# =============================================================================
# LOGGING - DESARROLLO
# =============================================================================
LOG_LEVEL=DEBUG

# Base de datos
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000